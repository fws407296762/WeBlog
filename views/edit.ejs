<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title></title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" media="screen" href="/css/bootstrap-markdown.min.css">
    <link href="/blog.css" rel="stylesheet">
    <link rel="stylesheet/less" type="text/css" href="/less/bootstrap-markdown.less">
</head>
<body >
<%include nav%>
    <div>
        <div class="container"><br/><br/><br/></div>
        <div class="container">
            <% if(locals['error']){ %>
            <div class="alert alert-danger" role='alert'>
                <%= error %>
            </div>
            <% } %>
        <form action="/article/edit/<%=article.id%>/" method="post">
            <select class="form-control" name="categoryId">
                <option value="">文章分类</option>
                <% categories.forEach(function(category){ %>
                <%if(category.id==article.category_id){%>
                <option value="<%=category.id %>" selected> <%=category.name %></option>
                <%}else{%>
                <option value="<%=category.id %>"> <%=category.name %></option>
                <%}%>
                <% }) %>
            </select>
            <input class='form-control' name="title" type="text" placeholder="标题" value="<%-article.title%>"/>
            <textarea name="content" data-provide="markdown" rows="10" class="md-input"><%-article.content%></textarea>
            <button type="submit" class="btn btn-lg btn-default btn-block">发表</button>
        </form>
        </div>
     </div>
</body>

<script src="/jquery-1.10.2.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/bootstrap-markdown.js"></script>
<script src="/js/to-markdown.js"></script>
<script src="/js/markdown.js"></script>

</html>